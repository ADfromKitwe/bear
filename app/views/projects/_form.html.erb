<%= form_for ([@customer, @project]), :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :location, :class => 'control-label' %>
    <div class="controls">
      <label>Outdoor: <%= f.radio_button :location, 'Outdoor' %></label>
      <label>Indoor:  <%= f.radio_button :location, 'Indoor' %></label>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :details, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :details, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :status, ['New', 'In Progress', 'Complete'] %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                customer_projects_path(@customer), :class => 'btn' %>
  </div>
<% end %>
